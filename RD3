local function Intro()
    local sg = Instance.new("ScreenGui", player.PlayerGui); local t = Instance.new("TextLabel", sg)
    t.Size = UDim2.new(1,0,1,0); t.BackgroundTransparency = 1; t.Text = "RD3 Creator -- By Uncle"; t.TextColor3 = Color3.new(1,1,1); t.Font = "GothamBold"; t.TextSize = 40; t.TextTransparency = 1
    TweenService:Create(t, TweenInfo.new(1), {TextTransparency = 0}):Play(); task.wait(2.5)
    TweenService:Create(t, TweenInfo.new(1), {TextTransparency = 1}):Play(); task.wait(0.5)
    local m = Instance.new("TextLabel", sg); m.Size = UDim2.new(0.4, 0, 0, 60); m.Position = UDim2.new(0.3, 0, -0.1, 0); m.Text = "Ø§Ù†ÙƒÙ„ ÙŠØ³Ù„Ù… Ø¹Ù„ÙŠÙƒ"; m.BackgroundColor3 = Color3.fromRGB(30,30,30); m.TextColor3 = Color3.new(1,1,1); m.Font = "GothamBold"; m.TextSize = 25; Instance.new("UICorner", m)
    m:TweenPosition(UDim2.new(0.3, 0, 0.45, 0), "Out", "Bounce", 1); task.wait(2)
    m:TweenPosition(UDim2.new(0.3, 0, 1.1, 0), "In", "Quad", 1); task.wait(1); sg:Destroy(); BuildUI()
end

Intro()
