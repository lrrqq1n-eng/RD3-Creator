    WalkSpeed = 16
}

-- [[ Ù…Ø­Ø±Ùƒ Ø§Ù„Ù‡Ø¬ÙˆÙ… ÙˆØ§Ù„Ø¹ÙˆØ¯Ø© Ù„Ù„Ù…ÙƒØ§Ù† ]]
RunService.Stepped:Connect(function()
    if RD3_Config.ActiveMod ~= "" and RD3_Config.Target and RD3_Config.Target.Character then
        local myPart = player.Character:FindFirstChild("HumanoidRootPart")
        local tPart = RD3_Config.Target.Character:FindFirstChild("HumanoidRootPart")
        if myPart and tPart then
            player.Character.Humanoid:SetStateEnabled(Enum.HumanoidStateType.Dead, false)
            if RD3_Config.ActiveMod == "fling" then
                myPart.CanCollide = false
                myPart.Velocity = Vector3.new(RD3_Config.FlingPower, RD3_Config.FlingPower, RD3_Config.FlingPower)
                myPart.RotVelocity = Vector3.new(9000, 9000, 9000)
                myPart.CFrame = tPart.CFrame * CFrame.new(math.random(-0.1,0.1), 0, math.random(-0.1,0.1))
            elseif RD3_Config.ActiveMod == "bang" then
                myPart.CFrame = tPart.CFrame * CFrame.new(0, 0, 1.1) * CFrame.new(0, 0, math.sin(tick()*30)*1.2)
            elseif RD3_Config.ActiveMod == "lick" then
                myPart.CFrame = tPart.CFrame * CFrame.new(0, math.sin(tick()*25)*0.8, -1.2) * CFrame.Angles(0, math.rad(180), 0)
            elseif RD3_Config.ActiveMod == "suck" then
                myPart.CFrame = tPart.CFrame * CFrame.new(0, 0.5, -1.1) * CFrame.Angles(0, math.rad(180), 0)
            end
        end
    end
    if player.Character and player.Character:FindFirstChild("Humanoid") then
        player.Character.Humanoid.WalkSpeed = RD3_Config.WalkSpeed
    end
end)

-- [[ Ù…ÙŠØ²Ø© Ø³Ø­Ø¨ Ø§Ù„Ø¹Ù†Ø§ØµØ± (Ù„Ù„Ø²Ø± ÙˆØ§Ù„Ù‚Ø§Ø¦Ù…Ø©) ]]
local function MakeDraggable(obj)
    local dragging, dragInput, dragStart, startPos
    obj.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true; dragStart = input.Position; startPos = obj.Position
            input.Changed:Connect(function() if input.UserInputState == Enum.UserInputState.End then dragging = false end end)
        end
    end)
    obj.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then dragInput = input end
    end)
    RunService.RenderStepped:Connect(function()
        if dragging and dragInput then
            local delta = dragInput.Position - dragStart
            obj.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
end

